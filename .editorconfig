# Configuração global para todos os arquivos
root = true

# Aplica a todas as extensões de arquivo
[*]
charset = utf-8
indent_style = space
indent_size = 4
end_of_line = lf
trim_trailing_whitespace = true
insert_final_newline = true

# Configurações específicas para arquivos C
[*.{c,h}]
indent_size = 4
max_line_length = 80
